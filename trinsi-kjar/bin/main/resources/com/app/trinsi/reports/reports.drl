package com.app.trinsi.reports

//list any import classes here.
import com.app.trinsi.model.CATEGORY;
import com.app.trinsi.model.UserHealth;
import com.app.trinsi.model.UserPlanner;
import java.util.ArrayList;
//declare any global variables here
global ArrayList categories;
global ArrayList physicalCharacteristics;
global ArrayList healthConditions;
global ArrayList numbers;
    private PHYSICAL_CHARACTERISTICS physicalCharacteristics;
    private HEALTH_CONDITION healthCondition;
rule "Report"
    when
        $p: UserPlanner($id : id)
        plannerCategory( $id )
        plannerPhysicalCharacteristics( $id )
        plannerHealthCondition( $id )

    then
        System.out.println("cao");
end

rule "Search exercises"
    agenda-group "search-exercises"
    when
        $e: Exercise( $id: id )
        exerciseName( $id; )
        exerciseType( $id; )
        exerciseWeight( $id; )
    then
        exercises.add($e);


end

query plannerCategory(Long pId)
    UserPlanner(id == pId && category memberOf categories)
end

query plannerPhysicalCharacteristics( $id )
    UserPlanner(id == pId && category memberOf categories)
end
query plannerHealthCondition( $id )
    UserPlanner(id == pId && category memberOf categories)
end

